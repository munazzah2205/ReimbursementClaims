<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Main4Activity"
    android:background="#e6e2da">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#bc42f5"
        app:logo="@drawable/ic_arrow_back_black_24dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Expense"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:gravity="center"/>
    </androidx.appcompat.widget.Toolbar>
    <ImageView
        android:layout_marginTop="30sp"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_gravity="center"
        android:src="@drawable/scroll"/>
    <Button
        android:id="@+id/addreceipt"
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:text="Add Receipt"
        android:background="#ffffff"
        android:layout_gravity="center"/>
   <androidx.cardview.widget.CardView
      android:layout_marginTop="30sp"
       android:layout_width="match_parent"
       android:layout_height="100sp"
       app:cardCornerRadius="20sp"
       android:layout_marginLeft="10sp"
       android:layout_marginRight="10sp"
       android:background="#ffffff">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <TextView
               android:layout_width="80sp"
               android:layout_height="20sp"
               android:text="Indigo"
               android:textColor="#000000"
               android:layout_marginLeft="20sp"/>
           <TextView
               android:layout_marginTop="20sp"
               android:layout_width="120sp"
               android:layout_height="20sp"
               android:text="326 Mar,2019,9:30 PM"
               android:layout_marginLeft="20sp"/>
           <TextView
               android:layout_width="170sp"
               android:layout_height="20sp"
               android:layout_marginTop="70sp"
               android:layout_marginLeft="20sp"
               android:text="Via Axis Debit Card 7988"/>

           <ImageView
               android:layout_width="40sp"
               android:layout_height="40sp"
               android:layout_alignParentLeft="true"
               android:layout_marginLeft="310dp"
               android:src="@drawable/plane"/>

           <TextView
               android:layout_width="120sp"
               android:layout_height="30sp"
               android:layout_alignParentEnd="true"
               android:layout_alignParentRight="true"
               android:layout_marginTop="70sp"
               android:layout_marginEnd="7dp"
               android:layout_marginRight="7dp"
               android:text="â‚¹ 8000.00"
               android:textColor="#ff0000"
               android:textAlignment="center"
               android:gravity="center_horizontal" />
       </RelativeLayout>
   </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_marginTop="30sp"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_marginLeft="30sp"
                android:src="@drawable/notes"/>
            <TextView
                android:layout_marginLeft="5sp"
                android:layout_width="60sp"
                android:layout_height="40sp"
                android:text="Note"
                android:textColor="#000000"
                android:textSize="17sp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_gravity="center_vertical"
                tools:ignore="RtlCompat" />
            <Button
                android:id="@+id/note"
                android:hint="Add notes"
                android:layout_width="90sp"
                android:layout_height="40sp"
                android:layout_weight="1"
                android:clickable="true"
                android:background="#ffffff"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="210sp"
        android:background="#bc42f5"
        android:clickable="true"
        android:text="save"
        android:textColor="#ffffff"
        android:textSize="20sp" />
</LinearLayout>