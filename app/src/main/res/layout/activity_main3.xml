<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main3Activity"
    android:orientation="vertical"
    android:background="#e6e2da">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#bc42f5"
        app:logo="@drawable/ic_arrow_back_black_24dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Expense"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:gravity="center"/>
    </androidx.appcompat.widget.Toolbar>
    <ImageView
        android:layout_marginTop="30sp"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_gravity="center"
        android:src="@drawable/pic2"/>
    <Button
       android:id="@+id/addreceipt"
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:text="Add Receipt"
        android:background="#ffffff"
        android:layout_gravity="center"/>
    <TextView
        android:layout_marginTop="40sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter amount"
        android:textSize="20sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:textColor="#000000"/>
    <EditText
        android:id="@+id/amt"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:background="#ffffff"
        android:layout_marginTop="15sp"
        android:hint="Enter amount"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:layout_marginTop="20sp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="80sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Start Date"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/tvDate"
                android:layout_width="40sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Click here for date"
                android:textAlignment="center"
                android:gravity="center_horizontal" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="15sp"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_marginLeft="30sp"
                android:src="@drawable/redtag"/>
            <TextView
                android:layout_marginLeft="5sp"
                android:layout_width="60sp"
                android:layout_height="40sp"
                android:text="Category"
                android:textColor="#000000"
                android:textSize="17sp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_gravity="center_vertical"
                tools:ignore="RtlCompat" />
            <Spinner
                android:id="@+id/category"
                android:layout_width="90sp"
                android:layout_height="40sp"
                android:layout_weight="1"
                android:entries="@array/Category"
                android:defaultFocusHighlightEnabled="true"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="15sp"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_marginLeft="30sp"
                android:src="@drawable/location"/>
            <TextView
                android:layout_marginLeft="5sp"
                android:layout_width="60sp"
                android:layout_height="40sp"
                android:text="Location"
                android:textColor="#000000"
                android:textSize="17sp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_gravity="center_vertical"
                tools:ignore="RtlCompat" />
            <EditText
                android:id="@+id/location"
                android:layout_width="90sp"
                android:layout_height="40sp"
                android:layout_weight="1"
                android:hint="Unknown"
                android:background="#ffffff"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="15sp"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_marginLeft="30sp"
                android:src="@drawable/notes"/>
            <TextView
                android:layout_marginLeft="5sp"
                android:layout_width="60sp"
                android:layout_height="40sp"
                android:text="Note"
                android:textColor="#000000"
                android:textSize="17sp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_gravity="center_vertical"
                tools:ignore="RtlCompat" />
            <EditText
                android:id="@+id/note"
                android:layout_width="90sp"
                android:layout_height="40sp"
                android:layout_weight="1"
                android:hint="Add notes"
                android:background="#ffffff"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/save"
        android:layout_marginTop="66dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:background="#bc42f5"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:clickable="true"
        android:textAllCaps="false"/>
</LinearLayout>