<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="160sp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:background="#e6e2da"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40sp"
        app:cardCornerRadius="10sp"
        android:layout_margin="20sp"
        android:background="#ffff">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="40sp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cash"
                    android:id="@+id/cash"/>
                <TextView
                    android:id="@+id/claim1"
                    android:layout_weight="1"
                    android:layout_width="60sp"
                    android:layout_height="wrap_content"
                    android:text="Claim 1"
                    android:layout_marginLeft="30sp"
                    android:layout_gravity="center"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:paddingLeft="5sp"/>
                <TextView
                    android:id="@+id/november17"
                    android:layout_width="60sp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:layout_marginLeft="30sp"
                    android:layout_height="wrap_content"
                    android:text="November 17"
                    android:textSize="10sp"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/money1"
                    android:layout_width="90sp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60sp"
                    android:text="Rs.25000"
                    android:textColor="#000000"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_margin="20sp"
        android:background="#ffff"
        app:cardCornerRadius="10sp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/page"
                    android:layout_marginTop="5sp"
                    android:layout_width="40sp"
                    android:layout_height="30sp"
                    android:src="@drawable/page"/>
                <TextView
                    android:id="@+id/claim2"
                    android:layout_width="60sp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30sp"
                    android:layout_gravity="center"
                    android:paddingLeft="5sp"
                    android:text="Claim 2"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/november10"
                    android:layout_width="60sp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30sp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="November 10"
                    android:textAlignment="center"
                    android:textSize="10sp" />
                <ImageView
                    android:id="@+id/cut"
                    android:layout_width="60sp"
                    android:layout_height="30sp"
                    android:src="@drawable/cut"
                    android:layout_marginLeft="70sp"
                    android:layout_marginTop="5sp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>




</LinearLayout>
