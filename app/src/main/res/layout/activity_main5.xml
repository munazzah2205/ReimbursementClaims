<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main5Activity"
    android:orientation="vertical"
    android:background="#e6e2da">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#bc42f5"
        app:logo="@drawable/ic_arrow_back_black_24dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Receipt 1"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:gravity="center"/>
    </androidx.appcompat.widget.Toolbar>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="40sp"
        android:layout_width="357dp"
        android:layout_height="274dp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        app:cardCornerRadius="5sp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/photo"
                android:layout_width="106dp"
                android:layout_height="142dp"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="40dp"/>
            <TextView
                android:layout_width="114dp"
                android:layout_height="37dp"
                android:layout_marginTop="38dp"
                android:layout_marginLeft="160dp"
                android:text="Reimbursement Requested"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/amount"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_marginLeft="179dp"
                android:layout_marginTop="85dp"
                android:textColor="#000000"
                android:textStyle="bold" />
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginTop="119dp"
                android:layout_marginLeft="161dp"
                android:src="@drawable/mark"/>
            <TextView
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_marginTop="116dp"
                android:layout_marginLeft="183dp"
                android:text="Pending Approval"
                android:textColor="#f25353"/>
            <View
                android:layout_width="277dp"
                android:layout_height="1dp"
                android:layout_marginTop="171dp"
                android:layout_marginLeft="26dp"
                android:background="#707070"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="185dp"
                android:layout_marginLeft="36dp"
                android:src="@drawable/redtag"/>
            <TextView
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_marginTop="183dp"
                android:layout_marginLeft="67dp"
                android:text="Category"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/cattext"
                android:text="cat"
                android:layout_width="58dp"
                android:layout_height="15dp"
                android:layout_marginTop="209dp"
                android:layout_marginLeft="67dp"/>
            <View
                android:layout_width="1dp"
                android:layout_height="46dp"
                android:layout_marginTop="180dp"
                android:layout_marginLeft="165dp"
                android:background="#707070"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="183dp"
                android:layout_marginLeft="196dp"
                android:src="@drawable/location"/>
            <TextView
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_marginTop="183dp"
                android:layout_marginLeft="221dp"
                android:text="Location"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/loctext"
                android:text="Loc"
                android:layout_width="58dp"
                android:layout_height="15dp"
                android:layout_marginTop="209dp"
                android:layout_marginLeft="224dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_marginTop="20sp"
        android:layout_marginLeft="10sp"
        android:layout_width="60sp"
        android:layout_height="20sp"
        android:text="Notes"
        android:textColor="#000000"/>
    <TextView
        android:id="@+id/nottext"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:textColor="#000000"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginTop="80dp"
        android:text="Move to Archive"
        android:background="#bc42f5"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:clickable="true"/>
</LinearLayout>